{
  "name": "@rapideditor/location-conflation",
  "version": "2.0.0",
  "license": "ISC",
  "repository": "github:rapideditor/location-conflation",
  "description": "Define complex geographic regions by including and excluding country codes and geojson shapes",
  "keywords": [
    "geofence",
    "location",
    "locationset",
    "include",
    "exclude",
    "geojson"
  ],
  "contributors": [
    "Bryan Housel <bhousel@gmail.com> (https://github.com/bhousel)"
  ],
  "files": [
    "dist/",
    "src/"
  ],
  "type": "module",
  "exports": {
    "bun": "./src/location-conflation.ts",
    "dist/*": "./dist/*",
    "types": "./dist/ts/location-conflation.d.ts",
    "import": "./dist/js/location-conflation.mjs",
    "require": "./dist/js/location-conflation.cjs",
    "browser": "./dist/js/location-conflation.iife.js"
  },
  "scripts": {
    "all": "run-s clean lint build test",
    "build": "run-p build:js build:ts",
    "build:js": "bun ./scripts/build_js.ts",
    "build:ts": "tsc --project tsconfig.declarations.json",
    "clean": "bun ./scripts/clean.ts",
    "lint": "eslint ./scripts ./src ./test",
    "postpublish": "bun ./scripts/postpublish.ts",
    "start": "bun ./scripts/server.ts",
    "test": "bun test --dots --coverage ./test"
  },
  "dependencies": {
    "@mapbox/geojson-area": "^0.2.2",
    "@rapideditor/country-coder": "^5.6.0",
    "circle-to-polygon": "^2.2.0",
    "geojson-precision": "^1.0.0",
    "json-stringify-pretty-compact": "^4.0.0",
    "polyclip-ts": "~0.16.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/bun": "^1.3.2",
    "@types/geojson": "^7946.0.16",
    "eslint": "^9.39.1",
    "globals": "^16.5.0",
    "npm-run-all2": "^8.0.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.47.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "bun": ">=1.3.0"
  }
}
